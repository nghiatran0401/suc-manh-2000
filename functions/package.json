{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn build && firebase emulators:start --only functions",
    "serve:watch": "yarn build:watch && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "emulators:kill-functions": "kill $(lsof -t -i:5001)",
    "emulators:kill-auth": "kill $(lsof -t -i:9099)",
    "emulators:kill-firestore": "kill $(lsof -t -i:8080)",
    "emulators:kill-hosting": "kill $(lsof -t -i:5002)",
    "emulators:kill-storage": "kill $(lsof -t -i:9199)",
    "emulators:kill-database": "kill $(lsof -t -i:9000)",
    "emulators:kill-pubsub": "kill $(lsof -t -i:8085)",
    "emulators:kill-trailing-emulators": "concurrently yarn emulators:kill-*"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/nodemailer": "^6.4.9",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.6.0",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.0.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
